generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(uuid())
  link           String
  nickname       String
  email          String
  anonyQuestions AnonymousPost[]
  comuQuestions  CommunityPost[]
}

model CommunityPost {
  id        String   @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  authorId  String
  isAnony   Boolean
  author    User     @relation(fields: [authorId], references: [id])

  @@index([authorId], map: "CommunityPost_authorId_fkey")
}

model AnonymousPost {
  id        String   @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  authorId  String
  isAnony   Boolean
  author    User     @relation(fields: [authorId], references: [id])

  @@index([authorId], map: "AnonymousPost_authorId_fkey")
}
